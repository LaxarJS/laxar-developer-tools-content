{
   "name": "AxDeveloperToolbarWidget",
   "description": "Allows to show widget outlines and to display an alignment grid for the host application",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [ "grid" ],
      "properties": {
         "grid": {
            "type": "object",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string"
               }
            }
         }
      }
   }
}
